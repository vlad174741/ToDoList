<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- теги activity_edit -->
    <style name="background_text_tag_create" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="android:button"> @android:color/transparent</item>
        <item name="android:background">@drawable/tag_button_create_backgrund_light</item>
        <item name="android:textColor">@color/tag_button_light_color_text</item>

    </style>

    <!-- теги activity_main -->
    <style name="background_text_tag" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="android:button"> @android:color/transparent</item>
        <item name="android:background">@drawable/tag_button_backgrund_light</item>
        <item name="android:textColor">@color/tag_button_light_color_text</item>
        <item name="android:foregroundTint">@color/tag_button_icon_light</item>
        <item name="android:foregroundGravity">left|center</item>


    </style>

    <style name="tag_clear" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="srcCompat"> @drawable/ic_baseline_cancel_24</item>


    </style>

    <!-- круглые кнопки -->
    <style name="background_text_floating_button" parent="Theme.MaterialComponents.DayNight.DarkActionBar" >

        <item name="backgroundTint"> @color/purple_200</item>
        <item name="tint"> @color/white </item>

    </style>

    <!-- Recycler view -->
    <style name="rc_view_list" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="android:background"> @drawable/ic_border_list</item>

    </style>

    <style name="rc_view_list_label" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="android:textColor"> @color/gray2</item>
        <item name="android:textColorHint"> @color/gray</item>

    </style>

    <style name="rc_view_list_data" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="android:textColor"> @color/purple_200</item>
        <item name="android:textSize">12sp</item>


    </style>

    <style name="rc_imageView" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="tint"> @color/purple_200 </item>


    </style>


    <!-- задник activity_main -->
    <style name="activity_main_background" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="android:background"> @color/my_gray2</item>

    </style>

    <!-- задник activity_main -->
    <style name="activity_edit_background" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="android:background"> @color/my_gray2</item>

    </style>

    <!-- поиск -->
    <style name="activity_main_search_view_background" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="android:background"> @drawable/ic_search_border</item>
        <item name="android:searchIcon"> @drawable/ic_search_light</item>
        <item name="android:layout_marginStart"> 0dp</item>
        <item name="android:layout_marginEnd"> 0dp</item>
        <item name="android:layout_width"> match_parent</item>
        <item name="android:layout_height"> 55dp</item>


    </style>

    <!-- иконка при выборе изоброжения -->
    <style name="activity_edit_image" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="srcCompat"> @drawable/ic_image_light</item>


    </style>



    <!-- окно ввода заголовка -->
    <style name="activity_edit_label" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="android:background"> @drawable/ic_border_list</item>
        <item name="android:textColor">@color/gray2</item>
        <item name="android:textColorHint">@color/purple_200</item>


    </style>

    <!-- окно ввода описания -->
    <style name="activity_edit_content" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="android:background"> @drawable/ic_content_border</item>
        <item name="android:textColor">@color/gray2</item>
        <item name="android:textColorHint">@color/purple_200</item>




    </style>






</resources>